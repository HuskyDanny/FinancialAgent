# Financial Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_URL=mongodb://mongodb:27017/financial_agent
REDIS_URL=redis://redis:6379

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LangSmith Configuration (Factor 2: Own Your Prompts)
# =============================================================================
LANGSMITH_TRACING_V2=true
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=financial-agent

# =============================================================================
# AI Model APIs
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
QWEN_API_KEY=your-qwen-api-key

# =============================================================================
# Alibaba Cloud OSS (Object Storage Service)
# =============================================================================
OSS_ACCESS_KEY=your-oss-access-key
OSS_SECRET_KEY=your-oss-secret-key
OSS_BUCKET=financial-agent-charts
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# =============================================================================
# Cache Settings
# =============================================================================
REDIS_TTL_SECONDS=3600

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000

# =============================================================================
# Development Tools
# =============================================================================
# Set to true to enable debug logging
DEBUG=false

# Set to true to enable React Query devtools
REACT_QUERY_DEVTOOLS=true